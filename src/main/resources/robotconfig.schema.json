{
    "definitions": {
        "hardwareMap": {
            "type": "object",
            "title": "HardwareConfiguration",
            "propertyNames": {
                "pattern": "^[a-z]+([A-Z][a-z]*)*$"
            },
            "additionalProperties": {
                "type": "integer"
            }
        },
        "constants": {
            "type": "object",
            "title": "Hardware Constants",
            "additionalProperties": {
                "type": "number"
            }
        },
        "pid": {
            "type": "object",
            "title": "PID Configuration",
            "required": ["kP", "kI", "kD", "kF"],
            "properties": {
                "kP": { "type": "number" },
                "kI": { "type": "number" },
                "kD": { "type": "number" },
                "kF": { "type": "number" }
            }
        }
    },
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://edinarobotics.com/robotconfig.json",
    "type": "object",
    "title": "Robot Configuration",
    "properties": {
        "subsystems": {
            "$id": "#/properties/subsystems",
            "type": "object",
            "title": "SubsystemMap",
            "additionalProperties": {
                "$id": "#/properties/subsystems/subsystem",
                "type": "object",
                "title": "Subsystem Configuration",
                "properties": {
                    "implemented": { "type": "boolean" },
                    "talons": { "$ref": "#/definitions/hardwareMap" },
                    "victors": { "$ref": "#/definitions/hardwareMap" },
                    "falcons": { "$ref": "#/definitions/hardwareMap" },
                    "invertMotor": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "invertSensorPhase": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "drivePid": {
                        "$ref": "#/definitions/pid"
                    },
                    "azimuthPid": {
                        "$ref": "#/definitions/pid"
                    },
                    "pid": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/pid"
                        }
                    },
                    "swerveModules": {
                        "type": "object",
                        "title": "Swerve Modules",
                        "propertyNames": {
                            "pattern": "^[a-z]+([A-Z][a-z]*)*$"
                        },
                        "additionalProperties": {
                            "type": "object",
                            "title": "Swerve Module Configuration",
                            "required": ["drive", "azimuth", "encoderOffset"],
                            "properties": {
                                "drive": {
                                    "type": "string"
                                },
                                "azimuth": {
                                    "type": "string"
                                },
                                "encoderOffset": {
                                    "type": "number"
                                },
                                "invertSensorPhase": {
                                    "type": "boolean",
                                    "default": false
                                }
                            }
                        }
                    },
                    "solenoids": { "$ref": "#/definitions/hardwareMap" },
                    "doubleSolenoids": {
                        "type": "object",
                        "title": "Double Solenoid Map",
                        "propertyNames": {
                            "pattern": "^[a-z]+([A-Z][a-z]*)*$"
                        },
                        "additionalProperties": {
                            "type": "object",
                            "title": "Double Solenoids Configuration",
                            "required": ["forward", "reverse"],
                            "properties": {
                                "forward": {
                                    "type": "integer"
                                },
                                "reverse": {
                                    "type": "integer"
                                }
                            }
                        }
                    },
                    "canifier": { "type": "integer" },
                    "constants": { "$ref": "#/definitions/constants" }
                },
                "additionalProperties": false
            }
        },
        "pcm": {
            "$id": "#/properties/pcm",
            "type": "integer"
        },
        "constants": {
            "$ref": "#/definitions/constants"
        }
    },
    "anyOf": [
        {
            "properties": {
                "subsystems": {
                    "additionalProperties": {
                        "required": ["implemented"]
                    }
                }
            },
            "required": ["subsystems", "pcm", "constants"]
        }
    ]
}
